<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/numero_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="N° Facture RG" />

        <TextView
            android:id="@+id/client_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Client" />

        <TextView
            android:id="@+id/date_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Date" />

        <TextView
            android:id="@+id/date_echeance_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Date Echéance" />

        <TextView
            android:id="@+id/montant_rg_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Montant RG" />

        <TextView
            android:id="@+id/mode_paiement_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Mode Paiement" />
        <TextView
            android:id="@+id/mode_reg_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Mode de Reglement" />
        <TextView
            android:id="@+id/unite_liste_facture_rg_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Unité" />

    </LinearLayout>

</RelativeLayout>