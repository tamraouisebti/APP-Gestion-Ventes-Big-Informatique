<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".facture_rg"
    android:id="@+id/draw_facture_rg">
    <ViewFlipper
        android:id="@+id/vf_facture_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/principale_facture_rg"/>
        <include layout="@layout/facture_rg_nv_layout"/>




    </ViewFlipper>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview_facture_rg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/client_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>