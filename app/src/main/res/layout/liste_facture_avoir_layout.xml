<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/check_liste_facture_avoir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/numero_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Avoir" />

        <TextView
            android:id="@+id/client_liste_avoir_txt"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Client" />

        <TextView
            android:id="@+id/date_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Date" />

        <TextView
            android:id="@+id/facture_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Facture" />

        <TextView
            android:id="@+id/montant_ttc_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Montant T.T.C" />

        <TextView
            android:id="@+id/reste_payer_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Reste à payer" />
        <TextView
            android:id="@+id/etat_compta_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Etat Compta" />
        <TextView
            android:id="@+id/mode_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Mode Avoir" />
        <TextView
            android:id="@+id/unite_liste_avoir_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:text="Unité" />




    </LinearLayout>
</RelativeLayout>