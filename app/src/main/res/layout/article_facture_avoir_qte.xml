<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <Button
                    android:id="@+id/actualise_facture_avoir_valeur_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Actualiser"
                    />

                <Button
                    android:id="@+id/supp_facture_avoir_valeur_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supprimer" />



            </LinearLayout>
        </ScrollView>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.087">


            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="167dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <CheckBox
                        android:id="@+id/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                    <TextView
                        android:id="@+id/numero_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Article" />

                    <TextView
                        android:id="@+id/client_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="DÃ©signation" />

                    <TextView
                        android:id="@+id/date_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Magasin" />

                    <TextView
                        android:id="@+id/facture_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Magasin L" />

                    <TextView
                        android:id="@+id/montant_ttc_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="U.M" />

                    <TextView
                        android:id="@+id/prix_u_payer_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Qte.Fact" />
                    <TextView
                        android:id="@+id/remise_payer_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Qte Liv" />
                    <TextView
                        android:id="@+id/tva_payer_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Reste Av" />
                    <TextView
                        android:id="@+id/qte_payer_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Qte" />

                    <TextView
                        android:id="@+id/prix_payer_proforma_avoir_txt"
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Prix U" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Remise" />
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="TVA" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:text="Montant" />
                </LinearLayout>

                <ListView
                    android:id="@+id/liste_facture_facture_rg"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    app:layout_constraintVertical_bias="0.0" />


            </LinearLayout>

        </HorizontalScrollView>


















    </LinearLayout>
</android.support.constraint.ConstraintLayout>