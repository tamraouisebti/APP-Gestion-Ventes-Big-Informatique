<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <CheckBox
            android:id="@+id/check_liste_paiement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/numero_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
      />

        <TextView
            android:id="@+id/type_mvt_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
        />

        <TextView
            android:id="@+id/cpt_entreprise_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
           />

        <TextView
            android:id="@+id/designation_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
         />

        <TextView
            android:id="@+id/client_liste_paiement_txt"
            android:layout_width="250dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
       />

        <TextView
            android:id="@+id/numero_tiers_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />
        <TextView
            android:id="@+id/code_mvt_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />
        <TextView
            android:id="@+id/mouvement_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />
        <TextView
            android:id="@+id/date_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />
        <TextView
            android:id="@+id/mode_paiement_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />
        <TextView
            android:id="@+id/montant_recu_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />

        <TextView
            android:id="@+id/unite_liste_paiement_txt"
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
 />



    </LinearLayout>

</RelativeLayout>