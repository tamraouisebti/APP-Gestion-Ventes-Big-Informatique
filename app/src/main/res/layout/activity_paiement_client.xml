<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paiement_client"
    android:id="@+id/draw_paiement_client">
    <ViewFlipper
        android:id="@+id/vf_paiement"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/principale_paiement_client"/>
        <include layout="@layout/paiement_nv_layout"/>




    </ViewFlipper>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigationview_paiement_client"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/client_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>